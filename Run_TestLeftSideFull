from pybricks.hubs import PrimeHub
from pybricks.pupdevices import Motor, ColorSensor, UltrasonicSensor, ForceSensor
from pybricks.parameters import Button, Color, Direction, Port, Side, Stop
from pybricks.robotics import DriveBase
from pybricks.tools import wait, StopWatch
from TechiesDriveBase import *

def HangCoralTree():
    SetSpeed(300)
    MoveLeftArmUp(70, 50)
    MoveForward(320)
    MoveLeftArmDown(50, 30)
    MoveBackward(50)
    MoveLeftArmDown (60, 81)
    MoveForward(225)
    MoveLeftArmUp(50, 60)
    MoveBackward(200)
    MoveLeftArmDown(50, 60)

#Coral Reef and Shark
def BudsShark ():
    TurnRight(30)
    MoveForward(420)
    TurnLeft(120)
    SetSpeed(100)
    MoveForward(200)
    SetSpeed(200)
    MoveBackward(150)
    TurnRight(35)
    MoveForward(300)

    #Head back to base

    MoveBackward(300)
    TurnLeft(90)
    SetSpeed(900)
    MoveForward(600)
    MoveLeftArmDown(200,45)
    PauseMission()

def mastKraken():
    #This function completes the "Raising the Mast" and "Kraken's Treasure" Missions
    MoveLeftArmUp(700,45)
    SetSpeed(900)
    MoveForward(190)
    TurnRight(20)
    MoveForward(405)
    SetSpeed(50)
    TurnRight(70)
    SetSpeed(400)
    MoveForward(225)
    '''MoveBackward(20)
    MoveForward(90)
    SetSpeed(170)'''
    MoveBackward(170)

def hangDiverCoralBuds():
    #This function hangs the diver on the rack and flips the coral buds
    SetSpeed(600)
    TurnRight(88)
    SetSpeed(900)
    MoveBackward(510)
    MoveLeftArmUp(700,75)
    SetSpeed(300)
    MoveForward(150)
    SetSpeed(900)
    MoveForward(450)
    TurnRight(45)
    MoveForward(400)
  

def Do_MastKrakenReefDiver():
    #This function calls both individual mission functions and combines them
    HangCoralTree()
    BudsShark()
    mastKraken()
    hangDiverCoralBuds()

    
Do_MastKrakenReefDiver()



